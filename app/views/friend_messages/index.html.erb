<p id="notice"><%= notice %></p>

<p>
  <% if @index_type == :giver %>
    <h1><%= "Messages between #{@friend_messages.first.sender_name} and #{@friend_messages.first.recipient_name}" %></h1>
    <%= link_to "Messages between you and your recipient #{current_user.recipient.name}", recipient_messages_path %>
    <%= link_to 'All messages', messages_path %>
  <% elsif @index_type == :recipient %>
    <h1><%= "Messages between #{@friend_messages.first.sender_name} and #{@friend_messages.first.recipient_name}" %></h1>
    <%= link_to 'Messages between you and your giver', giver_messages_path %>
    <%= link_to 'All messages', messages_path %>
  <% else %>
    <h1>All Messages<h1>
    <%= link_to "Messages between you and your recipient #{current_user.recipient.name}", recipient_messages_path %>
    <%= link_to 'Messages between you and your giver', giver_messages_path %>
  <% end %>
</p>

<h1>Friend Messages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friend_messages.each do |friend_message| %>
      <tr>
        <td><%= friend_message.sender_name %></td>
        <td><%= friend_message.recipient_name %></td>
        <td><%= friend_message.content %></td>
        <td><%= link_to 'View/reply', friend_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New message to your giver', 'new_message_to_giver' %>
<%= link_to "New message to your recipient #{current_user.recipient.name}", 'new_message_to_recipient' %>
