<% provide(:title, 'Remove wish') %>

<% if @gift.recipient == logged_in_user.name %>
  Are you sure you want to remove this item from your wish list?
  <br>
  <%= link_to "Yes", gifts_destroy_wish_path(id: @gift.id), method: "delete" %>
  <br>
  <%= link_to "No", @gift %>
<% else %>
  You shouldn't be here.
  <%= link_to "Back to profile", logged_in_user %>
<% end %>
