<% provide title: "Edit wish for #{@wish.title}" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <a data-confirm="Are you sure you want to delete this wish?"
    data-method="delete" href=<%= "/wishes/#{@wish.id}"%>>Delete</a>
    <%= form_for(@wish) do |f| %>
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title, class: 'form-control'  %><br>

      <%= f.label :description, 'A longer description of your gift with any relevant details, including URLs, ISBNs, etc' %>
      <%= f.text_area :description, cols: '10', rows: '10', class: 'form-control'  %><br>

      <%= f.hidden_field :friend_id, value: current_user.id %>
      <%= f.hidden_field :year, value: Time.christmas_year %>

      <%= f.submit 'Save changes', class: 'btn-btn-primary' %>
      <%= link_to 'Cancel', :back %>
    <% end %>
  </div>
</div>
